<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="favoriteAdapter"
            type="com.example.application.ui.main.adapter.FavoriteRecipeAdapter" />

        <variable
            name="mainViewModel"
            type="com.example.application.ui.main.viewmodels.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.fragments.favorite.FavoriteRecipesFragment">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvFavoriteRecipe"
            setData="@{favoriteAdapter}"
            viewVisibility="@{mainViewModel.readFavoriteRecipes}"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imgNoData"
            viewVisibility="@{mainViewModel.readFavoriteRecipes}"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:alpha="0.5"
            android:contentDescription="@string/empty_list"
            android:src="@drawable/ic_menu_book"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/rvFavoriteRecipe"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.32"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tvNoDataText"
            viewVisibility="@{mainViewModel.readFavoriteRecipes}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            android:text="@string/no_favorite_recipes_saved"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="@+id/imgNoData"
            app:layout_constraintStart_toStartOf="@+id/imgNoData"
            app:layout_constraintTop_toBottomOf="@+id/imgNoData"
            tools:visibility="visible" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>